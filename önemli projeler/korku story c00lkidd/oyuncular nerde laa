-- LocalScript (executor için)
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- LocalPlayer ve c00lkidd hariç tüm oyuncuları yok say
local function hidePlayer(plr)
	if plr ~= LocalPlayer and plr.Name ~= "c00lkidd" then
		-- Karakteri görünmez yap
		if plr.Character then
			plr.Character:Destroy()
		end
		-- Oyuncuyu Players listenden gizle (UI tarafında)
		plr.Parent = nil
	end
end

-- İlkten herkesi kontrol et
for _, plr in ipairs(Players:GetPlayers()) do
	hidePlayer(plr)
end

-- Yeni girenleri de gizle
Players.PlayerAdded:Connect(function(plr)
	hidePlayer(plr)
end)

-------------- sorun burda ise silerim


-- LocalScript (executor için)
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ChatService = game:GetService("Players")

-- Chat GUI'yi bul
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")
local chatGui = PlayerGui:WaitForChild("Chat")

-- Mesajları sürekli kontrol edip temizle
local function hideMessages()
	for _, frame in ipairs(chatGui:GetDescendants()) do
		if frame:IsA("TextLabel") then
			-- Mesajın sahibi LocalPlayer veya c00lkidd değilse gizle
			local msgText = frame.Text
			local ownerName = msgText:match("^([^:]+):")
			if ownerName and ownerName ~= LocalPlayer.Name and ownerName ~= "c00lkidd" then
				frame.Visible = false
			end
		end
	end
end

-- Her frame eklendiğinde kontrol et
chatGui.DescendantAdded:Connect(function()
	task.wait(0.05)
	hideMessages()
end)

-- Düzenli olarak temizle
while true do
	task.wait(0.1)
	hideMessages()
end
