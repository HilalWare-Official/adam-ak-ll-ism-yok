-- Blacklist sistemi
local Players = game:GetService("Players")

-- Blacklistteki isimler
local blackList = {
    "Anar1234558",
    "makan0000",
    "sisiysieosisusjs",
    "ReVeD961",
    "sad53119",
    "Bob207362",
    "kakos_8881",
    "NOBUU8625",
    "bool_anget",
    "Kayrabjk010203",
    "AervanixVX"
}

-- İsmi blacklistte mi kontrol et
local function isBlackListed(name)
    for _, blockedName in ipairs(blackList) do
        if string.lower(name) == string.lower(blockedName) then
            return true
        end
    end
    return false
end

-- Oyuncu eklendiğinde kontrol et
Players.PlayerAdded:Connect(function(player)
    if isBlackListed(player.Name) then
        player:Kick("Blacklisted isimden dolayı oyundan atıldınız.")
    end
end)

-- Zaten oyunda olanları da kontrol et
for _, player in ipairs(Players:GetPlayers()) do
    if isBlackListed(player.Name) then
        player:Kick("Blacklisted isimden dolayı oyundan atıldınız.")
    end
end
